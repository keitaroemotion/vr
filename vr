regex=""

i=0

for elem in "${@}"
do
  if [ $i == 0 ]; then
    regex="$regex$elem"
  else
    regex="$regex.*$elem"
  fi

  i=$((i+1))
done

regex="$regex.*"

IFS=';' read -r -a array <<< "$(find . -type f | tr "\n" ";")"

target=""

for file in "${array[@]}"
  do
    if [[ $file =~ $regex ]]; then
      echo $file
      target="$target $file"
    else
      echo > /dev/null
    fi
  done

vim $target
